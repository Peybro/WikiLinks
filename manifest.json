{

  "manifest_version": 2,
  "name": "WikiLinks",
  "version": "1.0",

  "description": "Adds a link anchor to each headline in a Wikipedia page.",

  "icons": {
    "48": "icons/logo-sm.png",
    "96": "icons/logo-lg.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["index.js"]
    }
  ]

}